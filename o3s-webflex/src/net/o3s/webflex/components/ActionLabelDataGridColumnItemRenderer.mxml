<mx:HBox
    xmlns:mx="http://www.adobe.com/2006/mxml"
    width="100%"
    height="100%"
    dataChange="dataChanged()">

    <mx:Script>
        <![CDATA[

            import mx.controls.Alert;
            import mx.events.CloseEvent;


            /**
             * Remove icon (16 pixels)
             */
            [Embed(source='../images/remove16.png')]
            [Bindable]
            public var removeIcon16:Class;

            /**
             * Start icon (16 pixels)
             */
            [Embed(source='../images/start16.png')]
            [Bindable]
            public var startIcon16:Class;

			/**
			 * Printer icon (16 pixels)
			 */
			[Embed(source='../images/printer.png')]
			[Bindable]
			public var printerIcon16:Class;

			/**
			 * Printer icon (16 pixels)
			 */
			[Embed(source='../images/edit16.png')]
			[Bindable]
			public var editIcon16:Class;

            /**
             * Pause icon (16 pixels)
             */
            [Embed(source='../images/pause16.png')]
            [Bindable]
            public var pauseIcon16:Class;

            private function confirmRemove():void {
                Alert.show("Are you sure you want to remove this item ?",
                    "Remove task ?",
                    Alert.OK | Alert.CANCEL,
                    this,
					removeRegistered,
                    null,
                    Alert.OK);
            }

            private function removeRegistered(event:CloseEvent):void {
                if(event.detail == Alert.OK) {
					parentDocument.removeRegistered(data.id);
                }
            }

			private function getLabel4Printing():void {
				parentDocument.getLabel4Printing(data.id);
			}

			private function editRegistered():void {
				parentDocument.editRegistered(data.id);
			}

			private function modifySelectItem():void {
				if (CB_selectItem.selected == true) {
					parentDocument.addSelectedRegistered(data.id);
				}
				else {
					parentDocument.removeSelectedItem(data.id);
				}
			}

            private function pausePurgeTask():void {
                //var pausePurgeTaskEvent:PausePurgeTaskEvent = new PausePurgeTaskEvent();
                //pausePurgeTaskEvent.purgeTaskId = data.id;

                // Dispatch event
                //CairngormEventDispatcher.getInstance().dispatchEvent(pausePurgeTaskEvent);
				Alert.show("pause data id = " + data.id);
            }

            private function startPurgeTask():void {
                //var startPurgeTaskEvent:StartPurgeTaskEvent = new StartPurgeTaskEvent();
                //startPurgeTaskEvent.purgeTaskId = data.id;

                // Dispatch event
                //CairngormEventDispatcher.getInstance().dispatchEvent(startPurgeTaskEvent);
				Alert.show("start data id = " + data.id);
            }

            private function dataChanged():void {

				// reinit if necessary the check box
				if (parentDocument.getIdxSelectedRegistered(data.id) == -1) {
					CB_selectItem.selected = false;
				} else {
					CB_selectItem.selected = true;
				}
                if (data.executionInterval > 0) {
                    if (data.started) {
                        this.currentState = "startedPurgeTaskState";
                    } else {
                        this.currentState = "pausedPurgeTaskState";
                    }
                }
            }
        ]]>
    </mx:Script>


    <mx:states>
        <mx:State name="startedPurgeTaskState">
            <mx:AddChild>
                <mx:Button icon="{pauseIcon16}" width="20" height="20" click="pausePurgeTask()" />
            </mx:AddChild>
        </mx:State>
        <mx:State name="pausedPurgeTaskState">
            <mx:AddChild>
                <mx:Button icon="{startIcon16}" width="20" height="20" click="startPurgeTask()" />
            </mx:AddChild>
        </mx:State>
    </mx:states>

    <mx:Button id="B_removeItem" icon="{removeIcon16}" width="20" height="20" toolTip="Supprimer un inscrit"
               click="confirmRemove()" />

	<mx:Button id="B_editItem" icon="{editIcon16}" width="20" height="20" toolTip="Editer un inscrit"
			   click="editRegistered()" />

	<mx:Button id="B_printItem" icon="{printerIcon16}" width="20" height="20" toolTip="Imprimer un dossard"
			   click="getLabel4Printing()" />

	<mx:CheckBox id="CB_selectItem" selected="false" click="modifySelectItem()" toolTip="Selectionner l'inscrit"/>

</mx:HBox>
